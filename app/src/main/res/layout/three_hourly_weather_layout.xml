<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/three_hourly_card_view"
    style="@style/CardViewStyle"
    app:cardBackgroundColor="@color/lightBlue">

    <include
        android:id="@+id/first_hourly_layout"
        layout="@layout/hourly_weather_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/second_hourly_layout"
        layout="@layout/hourly_weather_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        app:layout_constraintEnd_toStartOf="@+id/third_hourly_layout"
        app:layout_constraintStart_toEndOf="@+id/first_hourly_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/third_hourly_layout"
        layout="@layout/hourly_weather_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        app:layout_constraintEnd_toStartOf="@+id/fourth_hourly_layout"
        app:layout_constraintStart_toEndOf="@+id/second_hourly_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/fourth_hourly_layout"
        layout="@layout/hourly_weather_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        app:layout_constraintEnd_toStartOf="@+id/fifth_hourly_layout"
        app:layout_constraintStart_toEndOf="@+id/third_hourly_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/fifth_hourly_layout"
        layout="@layout/hourly_weather_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        app:layout_constraintEnd_toStartOf="@+id/parent"
        app:layout_constraintStart_toEndOf="@+id/fourth_hourly_layout"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.cardview.widget.CardView>

